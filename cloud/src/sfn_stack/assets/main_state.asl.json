{
  "Comment": "AWS Batch with mltraining : Main state machine",
  "StartAt": "SubmitJob",
  "States": {
    "SubmitJob": {
      "Type": "Task",
      "Resource": "arn:aws:states:::batch:submitJob.sync",
      "Parameters": {
        "JobDefinition": "arn:aws:batch:${REGION}:${ACCOUNT}:job-definition/${JOB_DEFINITION}",
        "JobQueue": "arn:aws:batch:${REGION}:${ACCOUNT}:job-queue/${JOB_QUEUE}",
        "ContainerOverrides": {
          "Command": [
            "python",
            "run.py",
            "--user_ml_script_s3_uri",
            "$.user_ml_script_s3_uri",
            "--user_ml_output_csv_s3_uri",
            "$.user_ml_output_csv_s3_uri",
            "--model_name",
            "$.model_name",
            "--user_name",
            "$.user_name",
            "--email",
            "$.email",
            "--submission_timestamp",
            "$.submission_timestamp"
          ]
        }
      },
      "End": true,
      "Retry": [
        {
          "ErrorEquals": ["States.ALL"],
          "BackoffRate": 3,
          "IntervalSeconds": 180,
          "MaxAttempts": 10,
          "Comment": "retry because of AWS Batch Quotas Issue",
          "MaxDelaySeconds": 300,
          "JitterStrategy": "FULL"
        }
      ]
    }
  }
}
