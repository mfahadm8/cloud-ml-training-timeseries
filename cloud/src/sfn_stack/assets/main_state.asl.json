{
  "Comment": "AWS Batch with mltraining : Main state machine",
  "StartAt": "LogInput",
  "States": {
    "LogInput": {
      "Type": "Pass",
      "ResultPath": "$.loggedInput",
      "Parameters": {
        "Input.$": "$"
      },
      "Next": "SubmitJob"
    },
    "SubmitJob": {
      "Type": "Task",
      "Resource": "arn:aws:states:::batch:submitJob.sync",
      "Parameters": {
        "JobName.$": "States.Format('JOB-{}', $.submission_timestamp)",
        "JobDefinition": "arn:aws:batch:${REGION}:${ACCOUNT}:job-definition/${JOB_DEFINITION}",
        "JobQueue": "arn:aws:batch:${REGION}:${ACCOUNT}:job-queue/${JOB_QUEUE}",
        "Parameters": {
          "user_ml_script_s3_uri.$": "$.user_ml_script_s3_uri",
          "user_ml_output_csv_s3_uri.$": "$.user_ml_output_csv_s3_uri",
          "model_name.$": "$.model_name",
          "user_name.$": "$.user_name",
          "email.$": "$.email",
          "submission_timestamp.$": "$.submission_timestamp"
        }
      },
      "End": true,
      "Retry": [
        {
          "ErrorEquals": ["States.ALL"],
          "BackoffRate": 1,
          "IntervalSeconds": 180,
          "MaxAttempts": 1,
          "Comment": "retry because of AWS Batch Quotas Issue",
          "MaxDelaySeconds": 300,
          "JitterStrategy": "FULL"
        }
      ]
    }
  }
}
